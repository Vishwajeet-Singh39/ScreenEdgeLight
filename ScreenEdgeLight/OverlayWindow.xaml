<Window x:Class="ScreenEdgeLight.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <!-- RootGrid handles margins so we don't cover taskbar/title bar -->
    <Grid x:Name="RootGrid"
          Background="Transparent"
          IsHitTestVisible="False">

        <!-- Single rounded border = edge light -->
        <Border x:Name="EdgeBorder"
                Background="Transparent" 
                BorderBrush="White"
                BorderThickness="80"
                CornerRadius="80"
                IsHitTestVisible="False" />
            
           
    </Grid>
</Window>
