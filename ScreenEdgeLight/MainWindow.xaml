<Window x:Class="ScreenEdgeLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Edge Light"
        Height="260"
        Width="360"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: enable -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- 2: thickness -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- 4: opacity -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- 6: color buttons -->
            <RowDefinition Height="Auto"/>
            <!-- 7: minimise-to-tray button -->
            <RowDefinition Height="*"/>
            <!-- 8: tip text -->
        </Grid.RowDefinitions>

        <!-- Enable -->
        <CheckBox x:Name="EnableCheckBox"
                  Content="Enable edge light"
                  IsChecked="True"
                  Checked="EnableCheckBox_Checked"
                  Unchecked="EnableCheckBox_Checked"/>

        <!-- Thickness -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Edge thickness (px)" Margin="0,0,0,4"/>
            <Slider x:Name="ThicknessSlider"
                    Minimum="0"
                    Maximum="300"
                    Value="80"
                    ValueChanged="ThicknessSlider_ValueChanged"/>
        </StackPanel>

        <!-- Brightness -->
        <StackPanel Grid.Row="4" Orientation="Vertical">
            <TextBlock Text="Brightness (opacity)" Margin="0,0,0,4"/>
            <Slider x:Name="OpacitySlider"
                    Minimum="0"
                    Maximum="1"
                    SmallChange="0.05"
                    LargeChange="0.1"
                    TickFrequency="0.05"
                    IsSnapToTickEnabled="False"
                    Value="0.7"
                    ValueChanged="OpacitySlider_ValueChanged"/>
        </StackPanel>

        <!-- Color presets -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
            <TextBlock Text="Color:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Content="Warm" Margin="0,0,4,0" Click="WarmButton_Click"/>
            <Button Content="Neutral" Margin="0,0,4,0" Click="NeutralButton_Click"/>
            <Button Content="Cool" Click="CoolButton_Click"/>
        </StackPanel>

        <!-- Minimise to tray button -->
        <Button Grid.Row="7"
                Content="Minimize to tray"
                Width="140"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Click="MinimizeToTray_Click"/>

        <!-- Tip -->
        <TextBlock Grid.Row="8"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   Opacity="0.7">
            Tip: Put your video call window in the center of the screen.
            The edges will act as a soft fill light on your face.
        </TextBlock>
    </Grid>
</Window>
